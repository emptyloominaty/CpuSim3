        <TextBlock Name="SP_Text" HorizontalAlignment="Left" Margin="210,240,0,-184" TextWrapping="Wrap" Text="SP: " Grid.RowSpan="2"/>
        <TextBlock Name="DEBUG_Text" HorizontalAlignment="Left" Margin="20,31,0,49" TextWrapping="Wrap" Text="DEBUG: " Grid.RowSpan="2"/>
        <TextBlock Name="Clock_Text" HorizontalAlignment="Left" Margin="80,140,0,-49" TextWrapping="Wrap" Text="0" Grid.RowSpan="2"/>

        <TextBlock Name="IPC_Text" HorizontalAlignment="Left" Margin="20,60,0,-49" TextWrapping="Wrap" Text="IPC:" Grid.RowSpan="2"/>
